<%= render 'shared/errors', obj: @employee %>

<div class="row">
 <div class="col-md-12">

     <%= form_for(@employee, :html => {class: "form-horizontal", role: "form"}) do |f| %>
     
      <div class="form-group">
        <div class="control-label col-sm-3">
         <%= f.label :employee_name %></br>
        </div>
        
         <div class="col-sm-6">
         <%= f.text_field :employee_name, class: "form-control", placeholder: "Employee Name",autofocus: true %>
         </div>
       </div>
      <div class="form-group">
          <div class="control-label col-sm-3">
           <%= f.label :city %></br>
          </div>
          <div class="col-sm-6">
           <%= f.text_field :city,class: "form-control", placeholder: "City" %>
          </div>
      </div> 
         
      <div class="form-group">
         <div class="control-label col-sm-3">
          <%= f.label :mobile %></br>
         </div>
         <div class="col-sm-6">
          <%= f.text_field :mobile, class: "form-control", placeholder: "Mobile" %>
         </div>
      </div>
      
      
     <div class="form-group">
      <div class="col-sm-offset-3 col-sm-10">
         </br><%= f.submit class: 'btn btn-primary btn-lg'%>
      </div>
     </div>
    
     <% end %>
     
      <div class="col-xs-4 col-xs-offset-4">
       [ <%= link_to "Cance the request & return to Employee Listing", employees_path %> ]
      </div>
 
  </div>
</div>

 